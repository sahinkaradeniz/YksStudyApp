<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlanixYks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- üst ana renk. -->
        <item name="colorPrimaryVariant">@color/lightred</item>
        <item name="colorOnPrimary">@color/black</item> <!-- button ici renkler . -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item><!-- takvim recili renk, switch secilme rengi -->
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/darkred</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" >@color/white</item><!-- en üst saat kısmı rengi. -->
        <!-- Customize your theme here. -->
        <item name="android:colorBackground" >@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
</resources>